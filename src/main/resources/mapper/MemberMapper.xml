<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smhrd.buildUp.mapper.MemberMapper">

    <resultMap id="MemberResultMap" type="com.smhrd.buildUp.dto.Member">
        <id property="id" column="id" />
        <result property="email" column="email" />
        <result property="passwordHash" column="password_hash" />
        <result property="name" column="name" />
        <result property="createdAt" column="created_at" />
    </resultMap>

    <insert id="insert" parameterType="com.smhrd.buildUp.dto.Member" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO member
            (email, password_hash, name)
        VALUES
            (#{email}, #{passwordHash}, #{name})
    </insert>

    <select id="findByEmail" parameterType="string" resultMap="MemberResultMap">
        SELECT id, email, password_hash, name, created_at
        FROM member
        WHERE email = #{email}
        LIMIT 1
    </select>

</mapper>

